<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionButtonStyle">@style/ActionButtonStyle</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Notitle" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>


    <style name="AppTheme.Notitle.FullScreen" parent="AppTheme.Notitle">
        <item name="android:windowFullscreen">true</item>

    </style>


    <style name="AppTheme.Transparent" parent="AppTheme">
        　　
        <item name="android:windowBackground">@android:color/transparent</item>
        　　
        <item name="android:windowIsTranslucent">true</item>
    </style>


    <style name="AppTheme.ToolBar" parent="AppTheme">

        <!-- 箭头 -->
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>
        <item name="android:windowActionBarOverlay">@style/ActionButton.Overflow</item>
        <item name="actionOverflowButtonStyle">@style/ActionButton.Overflow</item>
        <item name="titleTextColor">@android:color/white</item>
    </style>


    <style name="ActionButton.Overflow" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@mipmap/ic_menu_more_overflow</item>
    </style>


    <style name="AppTheme.DrawerArrowToggle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <style name="Text_Title">

        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/md_black_1000</item>


    </style>

    <style name="Text_Content">

        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/md_grey_400</item>
    </style>

    <style name="Text_Content_grey_800">

        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/md_grey_800</item>
    </style>


    <style name="Text_Title_Large" parent="Text_Title">

        <item name="android:textSize">20dp</item>
    </style>


    <style name="TabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TabLayoutTextAppearanceInverse" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@android:color/holo_red_light</item>
    </style>


    <style name="btn" parent="Base.TextAppearance.AppCompat.Widget.Button">

        <item name="android:background">@drawable/bg_btn</item>
        <item name="android:textColor">@color/color_btn</item>
    </style>

    <style name="btn_small" parent="btn">

        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="btnStyleArsenic" parent="@android:style/Widget.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.6</item>
        <item name="android:background">@drawable/custom_btn_arsenic</item>
        <item name="android:padding">10dip</item>
    </style>

    <style name="BaseDialogStyle" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">false</item>
        <!-- 是否浮现在activity之上 -->
        <!-- <item name="android:windowIsTranslucent">true</item> -->
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:background">#00000000</item>
        <item name="android:gravity">center</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <!-- <item name="android:backgroundDimEnabled">true</item> -->
        <!-- 模糊 -->
    </style>


    <!--Style for all the screens. Contains default margins -->
    <style name="base_layout_style">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>
    <!--Style for all the screens. Contains default margins -->
    <style name="rr_base_layout_style">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!--Style for the title icon & text in all the screens -->
    <style name="icon_and_title_style">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!--Style for the font to indicate success(green font) -->
    <style name="style_green_font">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearance</item>
        <item name="android:textColor">@android:color/holo_green_dark</item>
        <item name="android:gravity">center</item>
    </style>
    <!--Style for the font to indicate success(green font) -->
    <style name="style_dark_green_font">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@android:color/holo_green_dark</item>
        <item name="android:gravity">center</item>
    </style>
    <!--Style for the font to indicate No active connection(grey font) -->
    <style name="style_grey_font">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearance</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:gravity">center</item>
    </style>

    <!--Style for the font to indicate warning(red font) -->
    <style name="style_red_font">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAppearance">?android:attr/textAppearance</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
    </style>

    <!--Style for the normal font to be used across the application -->
    <style name="style_normal_font">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearance</item>
    </style>

    <style name="style_small_font">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="style_very_small_font">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10sp</item>
    </style>

    <!--Style for the normal font to be used across the application -->
    <style name="style_medium_font">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <!--Style for the font to be used in buttons -->
    <style name="style_button_font">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:background">#CC000000</item>
    </style>

    <style name="style_pwd_dialog_button_font" parent="style_button_font">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <!--Style for the large font to be used in titles -->
    <style name="style_large_font">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <!--Default style for the spinner -->
    <style name="style_default_spinner">
        <item name="android:textSize">@dimen/custom_spinner_font</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Font for the inventory list -->
    <style name="style_inventory_list_font">
        <item name="android:textSize">@dimen/inventory_list_font_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Button for Home Screen -->
    <style name="DashboardButton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textAppearance">?android:attr/textAppearance</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#222222</item>
        <item name="android:background">@null</item>
    </style>

    <!--Background for save config-->
    <style name="save_config_background">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#B2B2B2</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">@dimen/default_left_padding</item>
    </style>

    <style name="save_config_setting_detail_background">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">@dimen/default_left_padding</item>
        <item name="android:paddingRight">@dimen/default_right_margin</item>
    </style>

    <style name="CustomNotificationBarText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- table row layout for spinners -->
    <style name="table_row_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>
    <!-- action bar icon style -->
    <style name="ActionButtonStyle" parent="@android:style/Widget.Holo.Light.ActionButton">
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>



</resources>
