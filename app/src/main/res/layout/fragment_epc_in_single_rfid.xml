<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="6dp"
        android:paddingLeft="@dimen/common_margin_size"
        android:paddingRight="@dimen/common_margin_size"
        android:paddingTop="6dp"
        android:weightSum="4">

        <TextView
            android:id="@+id/type_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="2"
            android:text="单证类型:"
            android:textColor="@color/common_text_color"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/unique_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="1.5"
            android:text="单号:"
            android:textColor="@color/common_text_color"
            android:textSize="12sp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="6dp"
        android:paddingLeft="@dimen/common_margin_size"
        android:paddingRight="@dimen/common_margin_size"
        android:paddingTop="6dp"
        android:weightSum="4">

        <TextView
            android:id="@+id/player_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="2"
            android:text="操作员:"
            android:textColor="@color/common_text_color"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/type_entity_single_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="0.5"
            android:textColor="@color/common_text_color"
            android:textSize="12sp"/>


        <TextView
            android:id="@+id/type_barcode_rfid_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="0.5"
            android:textColor="@color/common_text_color"
            android:textSize="12sp"/>


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#B4B3B3"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="7"
        >


        <TextView
            android:id="@+id/title_num_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="序号"
            android:textSize="12sp"
            />

        <View
            android:layout_width="1.5dip"
            android:layout_height="fill_parent"
            android:background="#B4B3B3"/>

        <TextView
            android:id="@+id/title_skuNum_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="款号"
            android:textSize="12sp"
            />


        <View
            android:layout_width="1.5dip"
            android:layout_height="fill_parent"
            android:background="#B4B3B3"/>

        <TextView
            android:id="@+id/title_play_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="计划"
            android:textSize="12sp"
            />

        <View
            android:layout_width="1.5dip"
            android:layout_height="fill_parent"
            android:background="#B4B3B3"/>

        <TextView
            android:id="@+id/title_real_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="实际"
            android:textSize="12sp"
            />

        <View
            android:layout_width="1.5dip"
            android:layout_height="fill_parent"
            android:background="#B4B3B3"/>

        <TextView
            android:id="@+id/title_diff_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="差异"
            android:textSize="12sp"
            />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#B4B3B3"/>

    <ListView
        android:id="@+id/epc_lv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="@color/white"
        android:cacheColorHint="#00000000"
        android:divider="#B4B3B3"
        android:dividerHeight="1.0dip"
        android:fastScrollEnabled="false"
        android:listSelector="#00000000"
        android:scrollbars="none"
        android:scrollingCache="false"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#B4B3B3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:paddingBottom="4dp"
        android:paddingRight="@dimen/common_margin_size"
        android:paddingTop="4dp"
        android:weightSum="3">

        <TextView
            android:id="@+id/detail_play_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:text="计划总数:"
            android:textColor="@color/common_text_color"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/detail_real_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:gravity="center"
            android:text="实际总数:"
            android:textColor="@color/common_text_color"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/detail_diff_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="差异数:"
            android:textColor="@color/md_red_A200"
            android:textSize="14sp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#B4B3B3"/>

    <TextView
        android:id="@+id/box_save_tv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:paddingBottom="4dp"
        android:paddingRight="@dimen/common_margin_size"
        android:paddingTop="4dp"
        android:text="所有箱码有 :"
        android:textColor="@color/common_text_color"
        android:textSize="12sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#B4B3B3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        >

        <Button
            android:id="@+id/start_btn"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_btn"
            android:text="开始扫描"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/back_btn"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_btn"
            android:text="返回"
            android:textColor="@color/white"/>

        <!--        <Button
                    android:id="@+id/diff_analyse_bt"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn"
                    android:text="差异分析"
                    android:textColor="@color/white"/>-->

    </LinearLayout>


</LinearLayout>






