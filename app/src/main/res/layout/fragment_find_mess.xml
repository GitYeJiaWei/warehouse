<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:focusableInTouchMode="true"
    tools:context=".ui.activity.ReceiveMessActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:textSize="18sp"
        android:text="@string/ware_product"/>

    <EditText
        android:id="@+id/et_danhao"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ed_height"
        android:background="@drawable/back_text"
        android:hint="请输入产品"
        android:gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:text="@string/ware_prod_name"/>

    <EditText
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ed_height"
        android:enabled="false"
        android:background="@drawable/back_text"
        android:hint="请输入品名"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:textSize="18sp"
                android:text="预期数量"/>

            <EditText
                android:singleLine="true"
                android:enabled="false"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ed_height"
                android:background="@drawable/back_text"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:text="包装规格"/>

            <EditText
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ed_height"
                android:enabled="false"
                android:background="@drawable/back_text"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:text="收货数量"/>

            <EditText
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ed_height"
                android:background="@drawable/back_text"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:text="收获跟踪号"/>

            <EditText
                android:id="@+id/et_dingdan"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ed_height"
                android:background="@drawable/back_text"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:textSize="18sp"
                android:text="已收数量"/>

            <EditText
                android:singleLine="true"
                android:enabled="false"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ed_height"
                android:background="@drawable/back_text"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:text="单位"/>

            <EditText
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ed_height"
                android:background="@drawable/back_text"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:text="收货库位"/>

            <EditText
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ed_height"
                android:enabled="false"
                android:background="@drawable/back_text"
                android:gravity="center"/>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>