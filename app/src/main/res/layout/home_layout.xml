<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:paddingBottom="6dp"
              android:paddingLeft="6dp"
              android:paddingRight="6dp"
              android:paddingTop="6dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="4"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="2"
            >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="4dp"
                android:onClick="isReceiving"
                android:background="@drawable/btn_back">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawablePadding="4dp"
                    android:drawableTop="@mipmap/im_shouhuo"
                    android:gravity="center"
                    android:text="收货"
                    android:textColor="@color/white"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:onClick="isGrounding"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="4dp"
                android:background="@drawable/btn_back">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawablePadding="4dp"
                    android:drawableTop="@mipmap/im_shangjia"
                    android:gravity="center"
                    android:text="上架"
                    android:textColor="@color/white"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="4dp"
            android:weightSum="2"
            >

            <RelativeLayout
                android:layout_width="0dp"
                android:onClick="isPicking"
                android:layout_height="match_parent"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/btn_back">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="4dp"
                    android:drawableTop="@mipmap/im_jianhuo"
                    android:gravity="center"
                    android:text="拣货"
                    android:textColor="@color/white"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:onClick="isMoving"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="4dp"
                android:background="@drawable/btn_back">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawablePadding="4dp"
                    android:drawableTop="@mipmap/im_yidong"
                    android:gravity="center"
                    android:text="库存移动"
                    android:textColor="@color/white"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="4dp"
            android:weightSum="2"
            >

            <RelativeLayout
                android:layout_width="0dp"
                android:onClick="isFinding"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="4dp"
                android:background="@drawable/btn_back">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="4dp"
                    android:drawableTop="@mipmap/im_chaxun"
                    android:gravity="center"
                    android:text="库存查询"
                    android:textColor="@color/white"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:onClick="isChecking"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="4dp"
                android:background="@drawable/btn_back">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawablePadding="4dp"
                    android:drawableTop="@mipmap/im_pandian"
                    android:gravity="center"
                    android:text="库存盘点"
                    android:textColor="@color/white"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="4dp"
            android:weightSum="2"
            >

            <RelativeLayout
                android:id="@+id/find_rlyt"
                android:layout_width="0dp"
                android:onClick="isSetting"
                android:layout_marginRight="4dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_back">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="4dp"
                    android:drawableTop="@mipmap/im_shezhi"
                    android:gravity="center"
                    android:text="系统设置"
                    android:textColor="@color/white"/>
            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>